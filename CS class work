NO9.

#include <stdio.h>

//This program check whether a triangle can be formed by the given value for the angles.

int main() {
  int num= 0, k, l;
  printf("Enter 3 angles of the triangle ex.60 60 60\n");
  scanf("%i",&num);
  scanf("%i",&k);
  scanf("%i",&l);

  if ((k + l + num) == 180) {
    printf("Triangle can be formed");
  }
  else {
    printf("This triangle is not valid.");
  }
  return 0;
}




