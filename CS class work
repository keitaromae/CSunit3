NO3.

#include <stdio.h>

//This program will check wheather you have right to vote in Japanese law
//If you're over 18 you can vote, if you aren't you can't.

int main() {
  int num= 0;
  printf("Enter your age ex. 19\n");
  scanf("%i",&num);
  if (num >= 18) {
    printf("You are able to vote! since you're %i years old",num);
  }
  else{
    printf("You can not vote yet since you're %i years old",num);
  }
  return 0;
}


