NO1.

#include <stdio.h>

//This program will check your input number is even or odd.
//ex.input 15, output "15 is an odd number"

int main() {
  int num= 0;
  printf("Enter a number ex.2020\n");
  scanf("%i",&num);
  if ((num % 2)==0) {
    printf("%i is an even number",num);
  }
  else{
    printf("%i is an odd number",num);
  }
  return 0;
}

