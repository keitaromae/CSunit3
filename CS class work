NO6.

#include <stdio.h>

//This program checks wheather candidate is eligible for admission or not.
//math >= 65, phy >= 55, chem >= 50

int main() {
  int num= 0, k, l;
  printf("Enter your marks of 3 different subjects.\n");
  printf("Math:  , Phy:  , Chem:  ");
  scanf("%i",&num);
  scanf("%i",&k);
  scanf("%i",&l);
  if (( num + k + l ) >= 180) {
    printf("Math %i, Phy %i, Chem %i",num, k, l);
    printf(" The candidate is eligible for admission.\n");
  }
  else{
    printf("Math %i, Phy %i, Chem %i",num, k, l);
    printf(" The candidate is NOT eligible for admission.\n");
  }
  return 0;
}



