NO10.

#include <stdio.h>

//

int main() {
  int num= 0, k, l;
  printf("Enter your customer ID, name and unit consumed by you\n");
  printf("ex. 1001 James 800\n");

  scanf("%i",&num);
  scanf("%d",&k);
  scanf("%i",&l);

  if (l <= 199 & l >= 100) {
    printf("\n");
    printf("Customer IDNO: %i \n",num);
    printf("Customer Name: %d \n",k);
    printf("unit Consumed: %i \n",l);
    printf("Amount Charges @Rs. 1.20 per unit: \n");
    printf("Surchage Amount: \n");
    printf("Net Amount Paid By The Customer: \n");
  }
  else if (l<= 399 & l>= 200) {
    printf("yo");
  }
  else if (l<= 599 & l>= 400) {
    printf("ho");
  }
  else if (l>= 600) {
    printf("xo");
  }
  else {
    printf("no");
  }

  return 0;
}
