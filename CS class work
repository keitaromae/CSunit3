NO8.

#include <studio.h>

//check triangle is equilateral, ososceles or scalene.

int main() {
  int num= 0, k, l;
  printf("Enter 3 angles of the triangle ex.60 60 60\n");
  scanf("%i",&num);
  scanf("%i",&k);
  scanf("%i",&l);

  if ((k = l = num) < 60) {
    printf("This is an isosceles triangle.");
  }
  else if ((num & l & k) == 60) {
    printf("This is an Equilateral triangle.");
  }
  else if (num != l & num != k) {
    printf("This is an Scalene triangle.");
  }
  else {
    printf("This is not a triangle.");
  }
  return 0;
}



