NO7.

#include <stdio.h>

//

int main() {
  int num= 0;
  printf("Enter the tempreture in centigrade ex. 25\n");
  scanf("%i",&num);
  if (num < 0) {
    printf("%i°C Freezing weather",num);
  }
  else if( 0<=num<=10){
    printf("%i°C Very cold weather",num);
  }
  else if( 10<=num<=20){
    printf("%i°C Cold weather",num);
  }
  else if( 20<=num<=30){
    printf("%i°C Normal in Temp",num);
  }
  else if( 30<=num<=40){
    printf("%i°C Its Hot",num);
  }
  else if(num >= 40){
    printf("%i°C Its Very Hot",num);
  }
  else{
    printf("Please input the number");
  }
  return 0;
}
