NO2.

#include <stdio.h>

//This program will check your input number is positive or 
//negative
//ex. input 15, output "15 is a positive number"

int main() {
  int num= 0;
  printf("Enter a number ex.2020\n");
  scanf("%i",&num);
  if (num >= 0) {
    printf("%i is a positive number",num);
  }
  else{
    printf("%i is a negative number",num);
  }
  return 0;
}


