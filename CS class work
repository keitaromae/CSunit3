NO5.



#include <stdio.h>

//This program shows which quadrant they belong to

int main() {
  int num= 0, k;
  printf("Enter X and Y numbers\n");
  printf("ex. 7 9\n");

  scanf("%i",&num);
  scanf("%i",&k);
  
  if (num >= 1 & k >= 1) {
    printf("The coordinate point (%i, %i) lies in the First quadrant.",num, k);
  }
  else if (num >= 1 & k <= 1) {
    printf("The coordinate point (%i, %i) lies in the Second quadrant.",num, k);
  }
  else if (num <= 1 & k <= 1) {
    printf("The coordinate point (%i, %i) lies in the Third quadrant.",num, k);
  }
  else if (num <= 1 & k >= 1) {
    printf("The coordinate point (%i, %i) lies in the Fourth quadrant.",num, k);
  }
  else {
    printf("Input doesn't exist");
  }

  return 0;
}

